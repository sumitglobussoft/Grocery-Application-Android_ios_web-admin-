<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <TextView
        android:id="@+id/txt_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="SIGNUP USING EMAIL"
        android:textColor="#000000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/signup_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_bg"
        android:gravity="center"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColorHint="#FFFFFF"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/img_signup_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/signup_name"
        android:layout_alignLeft="@+id/signup_name"
        android:layout_margin="15dp"
        android:src="@drawable/user" />

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:background="@drawable/input_bg"
        android:gravity="center"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="#FFFFFF"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/img_signup_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/signup_email"
        android:layout_alignLeft="@+id/signup_email"
        android:layout_margin="15dp"
        android:src="@drawable/email" />

    <EditText
        android:id="@+id/signup_passowrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:background="@drawable/input_bg"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textEmailAddress"
        android:textColorHint="#FFFFFF"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/img_signup_passowrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/signup_passowrd"
        android:layout_alignLeft="@+id/signup_passowrd"
        android:layout_margin="15dp"
        android:src="@drawable/password" />

    <ImageView
        android:id="@+id/signup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_passowrd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/signup1" />

    <RelativeLayout
        android:id="@+id/rel_alrdy_acct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/txt_acct_alrdy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_acct_alrdy"
            android:text="Login"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/signup_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_alrdy_acct"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:src="@drawable/or" />

    <ImageView
        android:id="@+id/signup_fbk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_or"
        android:layout_centerHorizontal="true"
        android:src="@drawable/signup_fb" />

    <ImageView
        android:id="@+id/signup_twt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_fbk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/signup_tw" />

    <TextView
        android:id="@+id/policy_text"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="#3D3D3D"
        android:gravity="center"
        android:text="By creating an account, you agree to Grocery app's Terms of Service, Privacy Policy and Content Policies."
        android:textColor="#FFFFFF"
        android:textSize="6.75sp" />

    <RelativeLayout
        android:id="@+id/rel_skip_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/policy_text"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp" 
        android:layout_marginRight="25dp">

        <TextView
            android:id="@+id/signup_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip "
            android:textColor="#000000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/signupskip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/signup_skip"
            android:src="@drawable/arrow"
             />
    </RelativeLayout>

</RelativeLayout>